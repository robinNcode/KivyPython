<KivyBuilder>

    name:name
    pizza:pizza
    color:color

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2
            Label:
                text: "Name :"
                font_size:35
                color:"yellow"
            TextInput:
                id:name
                multiline:False

            Label:
                text: "Favorite Pizza :"
                font_size:35
                color:"yellow"
            TextInput:
                id:pizza
                multiline:False

            Label:
                text: "Favorite Color :"
                font_size:35
                color:"yellow"
            TextInput:
                id:color
                multiline:False

        Button:
            text: "Submit"
            font_size:32
            on_press: root.info()
